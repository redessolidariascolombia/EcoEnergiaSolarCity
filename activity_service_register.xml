<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceRegister">

    <!--Header-->
    <LinearLayout
        android:id="@+id/imageViewTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewTopTitle"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/header" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/principalLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="200dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/imageViewTop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_menu_manage" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Categorias"
                android:textColor="#009975"
                android:textAlignment="textEnd"
                android:textSize="40dp" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/buttonCentros"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="Centros Deportivos"
            android:backgroundTint="#009975"
            android:textSize="29dp"
            app:icon="@android:drawable/ic_notification_overlay" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/buttonCanchas"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="Canchas"
            android:backgroundTint="#009975"
            android:textSize="28dp"
            app:icon="@android:drawable/ic_notification_overlay" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <Button
            android:id="@+id/buttonParques"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:text="Parques"
            android:backgroundTint="#009975"
            android:textSize="28dp"
            app:icon="@android:drawable/ic_notification_overlay" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearFooter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="600dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/principalLayout"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/botonRetroceso"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:backgroundTint="#ffbf00"
                app:icon="@android:drawable/ic_menu_revert" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/consejo"
                android:textColor="#009975"
                android:textStyle="bold" />

            <Button
                android:id="@+id/botonAdvices"
                android:layout_width="70sp"
                android:layout_height="wrap_content"
                android:backgroundTint="#ffbf00"
                app:icon="@android:drawable/ic_menu_compass" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/botonRetroceso"
            app:srcCompat="@drawable/footer" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>